{
  "extends": "./tsconfig-base.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@modules": ["src/modules/index"],
      "@modules/*": ["src/modules/*"],
      "@gql": ["src/gql/index"],
      "@gql/*": ["src/gql/*"]
    },
    "esModuleInterop": false
  },
  "include": [
    "./tests/**/*.ts", "tests/generate-keysjts"
  ]
}
