{
  "extends": "../../tsconfig-base.json",
  "compilerOptions": {
    "typeRoots": [
      "./node_modules/@types"
    ],
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "paths": {
      "@modules": ["src/modules/index"],
      "@modules/*": ["src/modules/*"],
      "@gql": ["src/gql/index"],
      "@gql/*": ["src/gql/*"]
    }

  },
}
