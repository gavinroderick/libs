{
  "priority": 200,
  "template": {
    "settings": {
      "index": {
        "mapping": {
          "total_fields": {
            "limit": "3000"
          }
        },
        "refresh_interval": "5s",
        "number_of_shards": "1",
        "number_of_replicas": "0"
      }
    },
    "mappings": {
      "_source": {
        "enabled": true
      },
      "properties": {
        "@timestamp": {
          "type": "date"
        },
        "@version": {
          "type": "keyword"
        },
        "severity": {
          "type": "text",
          "index": true,
          "fields": {
            "keyword": {
              "type": "keyword",
              "ignore_above": 256
            }
          }
        },
        "source": {
          "index": true,
          "type": "keyword"
        },
        "message": {
          "type": "text",
          "index": true
        },
        "fields": {
          "type": "object",
          "dynamic": true
        },
        "subject": {
          "type": "keyword",
          "index": true
        },
        "req_id": {
          "type": "keyword",
          "index": true
        },
        "proc_time": {
          "type": "text",
          "index": true
        },
        "source_host": {
          "type": "text",
          "index": true,
          "fields": {
            "keyword": {
              "type": "keyword",
              "ignore_above": 256
            }
          }
        }
      }
    }
  },
  "index_patterns": [
    "logs-app-default*"
  ],
  "data_stream": {},
  "composed_of": []
}
